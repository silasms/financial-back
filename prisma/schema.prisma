generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id
  name      String
  email     String  @unique
  password  String

  @@map("users")
}

model Movement {
  id        String    @id
  name      String
  status    Status
  value     Float
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  @@map("movements")
}

enum Status {
  SPENDING
  EARNINGS
}